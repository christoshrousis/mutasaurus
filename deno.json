{
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-run",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "ok": "deno run --allow-read --allow-write --allow-run --allow-env --allow-ffi ./test/test.ts"
  },
  "fmt": {
    "include": [
      "src/",
      "tests/"
    ]
  },
  "lint": {
    "include": [
      "src/",
      "tests/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "@std/fs": "https://deno.land/std@0.224.0/fs/mod.ts"
  }
}
